<%= form_tag(articles_path, :method => "get", id: "search-form", style: "margin: 0") do %>
    <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span11", placeholder: "Search Articles" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
               of using a Rails form helper -->
        <button class="btn btn-green" type="submit"> <i class="icon-search"></i>
        <span class="hidden-phone">Search</span>
        </button>
    </div>
<% end %>